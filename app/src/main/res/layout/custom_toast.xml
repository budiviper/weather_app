<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_toast">

    <LinearLayout android:layout_width="wrap_content" android:layout_height="40dp" android:layout_margin="5dp"
                  android:weightSum="1.0" android:orientation="horizontal">
        <ImageView android:layout_margin="2dp" android:layout_width="0dp" android:layout_height="38dp" android:layout_weight="0.2"
                   android:src="@drawable/ic_weather" android:adjustViewBounds="true" android:padding="0dp"
                   android:layout_gravity="center" />

        <TextView android:layout_width="0dp" android:layout_height="fill_parent" android:layout_weight="0.8"
                  android:maxLines="2" android:textSize="14dp"
                  android:text="Hello World"
                  android:id="@+id/tvMessage" android:textColor="#c830466d" android:padding="5dp"
                  android:gravity="center_vertical"/>
    </LinearLayout>


</LinearLayout>